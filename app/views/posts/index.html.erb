<% @posts.each do |post| %>
<div class="box">
<div class="row intro">
  <div class="col-xs-1"><%= image_tag post.user.photo, :class => 'user_image'%></div>
  <div class="col-xs-11"><span class="user"><%= post.user.name %></span><br><span class="text"><%= post.description%></span></div>
</div>
<hr class="introhr">
<div class="row">
  <div class="col-xs-12">
    <div><%= image_tag post.photo, :class=>"center-image", :width=>"100%" %></div>
  </div>
</div>
<div class="row">
  <div class="col-xs-12">
  <%= link_to 'view post', post_path(post.id) %><% if user_signed_in? %>
  <% if post.user == current_user %>
    <%= link_to 'Edit post', edit_post_path(post.id) %>
    <%= link_to 'Delete post', post_path(post.id), method: :delete %>
    <% end %>
  </div>
  </div>
  <div class="row">
    <div class="col-xs-12">
  <% end %>
  <% post.comments.each do |comment| %>
    <hr>
    <%= comment.text %>&nbsp;&nbsp;><)))o>&nbsp;&nbsp;
    <%= comment.user.name %>
    <% if comment.user == current_user %>
      <%= link_to 'Delete Comment', post_comment_path(post_id: post.id, id: comment.id), method: :delete %>
    <% end %>
  <% end %>
  </div>
  </div>
  <div class="row">
    <div class="col-xs-12">
  <% if user_signed_in? %>
    <%= simple_form_for Comment.new, url: post_comments_path(post), method: :post do |f| %>
    <div class="col-xs-10">      <%= f.input :text, label:false , placeholder: 'Add a comment...' %></div>
      <div class="col-xs-2"><%= f.submit 'Post', class: 'btn btn-primary btn-block' %></div>
    <% end %>
  <% end %>
</div>
</div>
</div>

<% end %>
