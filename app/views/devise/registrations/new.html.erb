<div class="wrap">
  <div class="login-logout">
<h2 style="text-align:center;">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="row">
<div class="field ">
  <div class="col-xs-6">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true , required: true %>
  </div>
    <div class="col-xs-6">
      <%= f.label :email %><br />
      <%= f.email_field :email, required: true %>
  </div>
</div>
</div>

  <div class="field">
    <%= f.label 'Profile Picture' %>
    <%= f.file_field :photo %><br />
  </div>

  <div class="field">
    <span class="left"><%= f.label :password %></span>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <span class="right"><%= f.password_field :password, autocomplete: "off",required: true %></span><br />
  </div>
  <div class="field">
    <!-- <span class="left"><%= f.label :password_confirmation %></span> -->
    <span class="right"><%= f.password_field :password_confirmation, autocomplete: "off",placeholder: "confirmation" %></span><br />
  </div>

  <div class="actions field" style="text-align:center;">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<div style="text-align:center;"><%= render "devise/shared/links" %></div>
</div>
</div>
